{
    "name": "LLM Zoomcamp",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "elasticsearch",
    "workspaceFolder": "/workspaces/llm-zoomcamp",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "forwardPorts": [
        9200
    ],
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}